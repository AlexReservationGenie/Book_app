<%= form_for @book, html: { multipart: true } do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :author %><br>
  <%= f.text_field :author %>
</p>
<p>
  <%= f.label :category %><br>
  <%= f.text_field :category %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :image %>
  <%= f.file_field :image %>
</p>
  <%= f.submit %>
<% end %>
